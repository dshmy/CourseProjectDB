                        Color="Black"
                        Opacity="0.3"/>
                </Label.Effect>
            </Label>
            <TextBox x:Name="phoneNumberText" FontSize="20" Height="30">
                <TextBox.Effect>
                    <DropShadowEffect
                    ShadowDepth="4"
                    Direction="330"
                    Color="Black"
                    Opacity="0.5"/>
                </TextBox.Effect>
            </TextBox>
        </StackPanel>
        <Button Height="40" Width="195" FontFamily="Century Gothic" Foreground="White"  Template="{DynamicResource shabl6}" VerticalAlignment="Bottom" VerticalContentAlignment="Center" Grid.ColumnSpan="3" Content="Добавить" FontSize="18" Margin="206,0,217,35" Click="Button_Click" Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="exit" Foreground="White"  Template="{DynamicResource shabl7}"  FontSize="16" Margin="199,24,0,35" Content="Добавление сотрудника" Grid.Column="3" Grid.Row="1" Click="exit_Click"/>
    </Grid>
